@model eShopSolution.WebApp.Models.CheckoutViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "Checkout";
    var culture = CultureInfo.CurrentCulture.Name;
}

<ul class="breadcrumb">
    <li><a href="/"><localize>Home</localize></a> <span class="divider">/</span></li>
    <li class="active"> SHOPPING CART</li>
</ul>
<h3>  SHOPPING CART [ <small>@Model.CartItems.Count Item(s) </small>]<a href="/" class="btn btn-large pull-right"><i class="icon-arrow-left"></i> Continue Shopping </a></h3>
<hr class="soft" />
@if (ViewBag.SuccessMsg != null)
{
    <p class="alert alert-success">@ViewBag.SuccessMsg</p>
}
else
{
<table id="tbCart" class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td> <img width="60" src="@Configuration["BaseImageAddress"]/@item.Image" alt="" /></td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @item.Quantity
                </td>
                <td>@item.Price</td>
                <td>@(item.Quantity * item.Price)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="5" style="text-align:right"><strong>TOTAL =</strong></td>
            <td class="label label-important" style="display:block"> <strong>@Model.CartItems.Sum(x => x.Quantity * x.Price).ToString("N0")</strong></td>
        </tr>
    </tfoot>
</table>


<table class="table table-bordered">
    <tbody>
        <tr>
            <td>
                <form class="form-horizontal">
                    <div class="control-group">
                        <label class="control-label"><strong> VOUCHERS CODE: </strong> </label>
                        <div class="controls">
                            <input type="text" class="input-medium" placeholder="CODE">
                            <button type="submit" class="btn"> ADD </button>
                        </div>
                    </div>
                </form>
            </td>
        </tr>

    </tbody>
</table>

<table class="table table-bordered">
    <tr><th>ESTIMATE YOUR SHIPPING </th></tr>
    <tr>
        <td>
            <form class="form-horizontal" action="/@culture/Cart/Checkout" method="post">
                <div class="control-group">
                    <label class="control-label" for="inputCountry">Name </label>
                    <div class="controls">
                        <input type="text" asp-for="CheckoutVm.Name" placeholder="Name">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputCountry">Address </label>
                    <div class="controls">
                        <input type="text" asp-for="CheckoutVm.Address" placeholder="Address">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputCountry">Email </label>
                    <div class="controls">
                        <input type="text" asp-for="CheckoutVm.Email" placeholder="Email">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputCountry">PhoneNumber </label>
                    <div class="controls">
                        <input type="text" asp-for="CheckoutVm.PhoneNumber" placeholder="PhoneNumber">
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn">Purchase </button>
                    </div>
                </div>
            </form>
        </td>
    </tr>
</table>
}
<a href="/" class="btn btn-large"><i class="icon-arrow-left"></i> Continue Shopping </a>



