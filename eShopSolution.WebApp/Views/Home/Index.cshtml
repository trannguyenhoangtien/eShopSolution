@model HomeViewModel
@using eShopSolution.ViewModels.Catalog.Products;
@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer _loc
@{
    ViewData["Title"] = "Home Page";
    var culture = CultureInfo.CurrentCulture.Name;
}

@section slider{
    <div id="carouselBlk">
        <div id="myCarousel" class="carousel slide">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Slides.Count; i++)
                {
                    var slide = Model.Slides[i];
                    <div class="item @(i == 0 ? "active" : "")">
                        <div class="container">
                            <a href="@slide.Url"><img style="width:100%" src="@slide.Image" alt="special offers" /></a>
                            <div class="carousel-caption">
                                <h4>@slide.Name</h4>
                                <p>@slide.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
}

<div class="well well-small">
    <h4><localize>Featured Products</localize> <small class="pull-right">200+ featured products</small></h4>
    <div class="row-fluid">
        <div id="featured" class="carousel slide">
            <div class="carousel-inner">
                @{
                    List<List<ProductVm>> featureProducts = new List<List<ProductVm>>();
                    List<ProductVm> featureItem = new List<ProductVm>();
                }
                @for (int i = 0; i < Model.FeaturedProducts.Count; i++)
                {
                    if (featureItem.Count == 4)
                    {
                        featureProducts.Add(featureItem);
                        featureItem = new List<ProductVm>();
                        featureItem.Add(Model.FeaturedProducts[i]);
                    }
                    else
                    {
                        featureItem.Add(Model.FeaturedProducts[i]);
                        if (i == Model.FeaturedProducts.Count - 1)
                        {
                            featureProducts.Add(featureItem);
                        }
                    }

                }
                @for (int i = 0; i < featureProducts.Count; i++)
                {
                    <div class="item @(i == 0 ? "active" : "") ">
                        <ul class="thumbnails">
                            @foreach (var item in featureProducts[i])
                            {
                                <li class="span3">
                                    <div class="thumbnail">
                                        <i class="tag"></i>
                                        <a href="product_details.html"><img src="@item.ThumbnailImage" alt="@item.Name"></a>
                                        <div class="caption">
                                            <h5>@item.Name</h5>
                                            <h4><a class="btn" href="product_details.html"><localize>VIEW</localize></a> <span class="pull-right">@item.Price</span></h4>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
            <a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
            <a class="right carousel-control" href="#featured" data-slide="next">›</a>
        </div>
    </div>
</div>
<h4 localize-content>Latest Products</h4>
<ul class="thumbnails">
    @foreach (var item in Model.LastestProducts)
    {
        var url = $"/{culture}/{_loc["productUrl"]}/{item.Id}";
        <li class="span3">
            <div class="thumbnail">
                <a href="@url"><img src="@item.ThumbnailImage" alt="@item.Name" /></a>
                <div class="caption">
                    <h5>@item.Name</h5>
                    <p>
                        @item.Description
                    </p>

                    <h4 style="text-align:center">
                        <a class="btn" href="product_details.html"> <i class="icon-zoom-in"></i></a>
                        <a class="btn" href="#"><localize>Add to</localize> <i class="icon-shopping-cart"></i></a>
                        <a class="btn btn-primary" href="#">@item.Price</a>
                    </h4>
                </div>
            </div>
        </li>
    }
</ul>